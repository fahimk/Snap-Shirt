<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="20dp">
	<TextView android:id="@+id/shirttype_name" android:gravity="center"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" 
		android:textSize="18sp" android:textStyle="bold" android:text="shirt name" />
	<TextView android:id="@+id/shirttype_description"
		android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="12sp" android:padding="10dp" android:layout_below="@id/shirttype_name" />
	<Gallery android:id="@+id/gallery" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/shirttype_description"
		android:layout_above="@+id/shirtype_next" />
	<Button android:id="@id/shirtype_next" android:text="Next (Shirt Color/Size)"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" />
</RelativeLayout>
